@startuml cas-enseignant

skinparam actorStyle awesome
skinparam usecase {
    BackgroundColor<<Must>> #FF6B6B
    BackgroundColor<<Should>> #FFA500
    BackgroundColor<<Could>> #4ECDC4
    BorderColor #2C3E50
}

title Diagramme de cas d'utilisation - FORMATEUR (MoSCoW)

' === PARTIE HAUTE : MUST HAVE + SHOULD HAVE ===
package "MUST HAVE - Gestion des quiz" <<Must>> {
    usecase "S'authentifier" as UC1 <<Must>>
    usecase "Créer un compte" as UC2 <<Must>>
    usecase "Créer un quiz" as UC5 <<Must>>
    usecase "Ajouter des questions" as UC9 <<Must>>
    usecase "Publier un quiz" as UC12 <<Must>>
    usecase "Générer code d'accès" as UC14 <<Must>>
    usecase "Voir résultats d'un quiz" as UC29 <<Must>>
}

package "SHOULD HAVE - Gestion et statistiques" <<Should>> {
    usecase "Modifier son profil" as UC3 <<Should>>
    usecase "Réinitialiser mot de passe" as UC4 <<Should>>
    usecase "Modifier un quiz" as UC6 <<Should>>
    usecase "Supprimer un quiz" as UC7 <<Should>>
    usecase "Configurer le barème" as UC10 <<Should>>
    usecase "Définir la durée" as UC11 <<Should>>
    usecase "Voir résultats par apprenant" as UC30 <<Should>>
    usecase "Calculer moyenne des scores" as UC32 <<Should>>
    usecase "Exporter résultats CSV" as UC35 <<Should>>
    usecase "Consulter tableau de bord" as UC37 <<Should>>
}

' === ACTEUR CENTRAL ===
actor "Formateur" as Formateur

' === PARTIE BASSE : COULD HAVE ===
package "COULD HAVE - Fonctionnalités avancées" <<Could>> {
    usecase "Dupliquer un quiz" as UC8 <<Could>>
    usecase "Archiver un quiz" as UC13 <<Could>>
    usecase "Générer QR code" as UC15 <<Could>>
    usecase "Créer un groupe" as UC16 <<Could>>
    usecase "Ajouter des apprenants" as UC17 <<Could>>
    usecase "Retirer des apprenants" as UC18 <<Could>>
    usecase "Assigner un quiz" as UC19 <<Could>>
    usecase "Définir période d'accès" as UC20 <<Could>>
    usecase "Voir résultats par groupe" as UC31 <<Could>>
    usecase "Voir temps moyen" as UC33 <<Could>>
    usecase "Voir taux de réussite" as UC34 <<Could>>
    usecase "Exporter résultats PDF" as UC36 <<Could>>
}

